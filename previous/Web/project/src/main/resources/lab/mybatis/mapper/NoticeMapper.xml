<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lab.mybatis.mapper.NoticeMapper">
	<select id="getNoticeList" resultType="lab.spring.parking.model.NoticeVO">
		select * from notice
	</select>
	<select id='getNotice' resultType='lab.spring.parking.model.NoticeVO' parameterType="string">
		select * from notice where bid=#{bid}
	</select>
	<insert id='addNotice' parameterType='lab.spring.parking.model.NoticeVO'>
		 insert into notice(managername, bid, subject, idate, contents) values (#{managername}, bid_seq.nextval, #{subject}, sysdate ,#{contents})
	</insert>
	<update id="modifyNotice" parameterType='lab.spring.parking.model.NoticeVO'>
		update product set idate=sysdate, contents=#{contents}
	</update>
	<delete id ="removeNotice" parameterType='lab.spring.parking.model.NoticeVO'>
		delete product where bid=#{bid}
	</delete>
	</mapper>